programa
{
	
	funcao inicio()
	{
		inteiro idade
		cadeia doc
		escreva("Qual sua idade? ")
		leia (idade)
		escreva ("Você tem documento? ")
		leia (doc)
	se ((idade > 18) e (doc=="Sim" ou doc=="sim")) {
          escreva ("Compra autorizada!")
   }
    senao {
    	escreva ("Compra negada!")
  }
 }
}
