programa
{
	
	funcao inicio()
	{
		inteiro folhas
		escreva ("Digite a quantidade de folhas de menta que você possui em seu inventário: ")
		leia (folhas)
		se (folhas%3== 0) {
			escreva ("Poção ativa!") 
		}
 		senao {
 			escreva ("Água suja!") 
 		}
	}
}
