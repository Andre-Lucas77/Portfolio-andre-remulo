programa
{
	
	funcao inicio()
	{
		cadeia dia
		escreva("Qual o dia da semana? ")
		leia (dia)
	se ( dia=="Sábado" ou dia=="Domingo"){
		escreva ("Hoje é descanso!")
    }
  	senao {
  		escreva ("Não é descanso!")
  }
 }
}
